<div class="flex items-center border-b-2 border-black bg-white px-2 md:px-4">
  <img src="https://cdn.icon-icons.com/icons2/3911/PNG/512/bim_logo_icon_247473.png" class="md:w-22 w-20" alt="Bim Logo" />
<h1 class="ml-auto text-xl font-bold md:text-5xl">
  <% if @article.name.split.size > 4 %>
    <span class="text-xl font-semibold md:text-5xl">
      <%= @article.name.split(" ").first(4).join(" ") %>
    </span>
    <span class="text-base font-semibold md:text-3xl">
      <%= @article.name.split(" ").drop(4).join(" ") %>
    </span>
  <% else %>
    <%= @article.name %>
  <% end %>
  
</h1>

</div>
<!-- Body -->
<div class="w-full flex-grow justify-center gap-2 bg-slate-100">
  <div class="relative mx-auto my-8 max-w-lg md:mt-32">
    <div class="absolute right-4 top-4 space-x-1">
<% if @article.promo_price %>
    <div class="text-center">
    <p class="text-2xl font-bold text-red-600">
      <s><%=  sprintf("%.2f", @article.price) %> DH</s>
    </sup>

    </p>
    <p class="rounded-lg bg-red-600 px-3 py-1 text-2xl font-bold text-white md:text-3xl">
  <%= @article.promo_price.to_i %>,
    <sup class="text-sm md:text-base strock">
      <%= sprintf("%02d", (@article.promo_price - @article.promo_price.to_i) * 100) %> DH
    </sup>    </p>
  </div>
<% else %>
  <p class="rounded-lg bg-red-600 px-3 py-1 text-2xl font-bold text-white md:text-3xl">
    <%= @article.price.to_i %>,
    <sup class="text-sm md:text-base strock">
      <%= sprintf("%02d", (@article.price - @article.price.to_i) * 100) %> DH
    </sup>
  </p>
<% end %>

      <span class="absolute -bottom-5 right-0 bg-yellow-400 text-right text-sm"><%= @article.code %></span>
    </div>
    <% if @article.photo.attached? %>
    <%= image_tag @article.photo, class: "w-full object-cover" %>
  <% else %>
    <p class="text-xl text-gray-600">No photo available</p>
  <% end %>
  </div>
</div>