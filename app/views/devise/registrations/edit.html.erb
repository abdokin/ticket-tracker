<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md text-black">
  <h2 class="text-3xl font-semibold text-center mb-4">Edit Your Account</h2>

  <!-- Welcome message here -->
  <p class="text-lg text-center text-gray-600 mb-4">Welcome <%= current_user.name %>!</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'space-y-4' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :email, class: 'block font-medium' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full rounded border py-2 px-3 text-gray-700' %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="space-y-2">
      <%= f.label :password, class: 'block font-medium' %>
      <i class="text-sm text-gray-600">(Leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: 'block w-full rounded border py-2 px-3 text-gray-700' %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-600"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, class: 'block font-medium' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'block w-full rounded border py-2 px-3 text-gray-700' %>
    </div>

    <div class="space-y-2">
      <%= f.label :current_password, class: 'block font-medium' %>
      <i class="text-sm text-gray-600">(We need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'block w-full rounded border py-2 px-3 text-gray-700' %>
    </div>

    <div class="flex justify-between items-center">
      <%= link_to "Back", :back, class: 'hover:underline' %>
      <div>
        <%= f.submit "Update", class: 'btn-sm' %>
      </div>
    </div>
  <% end %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "ml-2 bg-red-700 btn-sm text-xm" %>

</div>
