<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md text-black">
  <h2 class="text-3xl font-semibold text-center mb-4">Welcome Back</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div class="space-y-2">
      <%= f.label :email, class: 'block font-medium' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full rounded border py-2 px-3 text-gray-700' %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: 'block font-medium' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'block w-full rounded border py-2 px-3 text-gray-700' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: 'text-gray-400' %>
        <%= f.label :remember_me, class: 'text-gray-400' %>
      </div>
    <% end %>

    <div class="flex justify-between">
     <div><%= render "devise/shared/links" %></div>
      <%= f.submit "Log in", class: 'btn-sm' %>
    </div>
  <% end %>

</div>
